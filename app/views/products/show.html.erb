<h1><%= @product.name %></h1>
<div class="row">
  <div class="col-sm-9">
<h2>Reviews</h2>

<ul class="list-group">
  <% @product.reviews.each do |review| %>
  <li class="list-group-item">
    <%= review.content_body %>
    -- <%= review.author %>  |
    <%= review.rating %>
    <%= link_to 'Edit', edit_product_review_path(@product, review) %>
<% end %>
  </li>
</ul>

    </div>
  <div class="col-sm-3" style="margin-top:60px">
    <p><%= link_to 'Review this product', new_product_review_path(@product) %></p>
    <p><%= link_to 'Edit product', edit_product_path(@product) %></p>
    <p><%= link_to 'Delete product', product_path(@product), :method => 'delete', :data => {
      :confirm => 'Are you sure?'
      } %></p>
      <p><%= link_to 'See all products', products_path(@product) %></p>
  </div>
</div>
